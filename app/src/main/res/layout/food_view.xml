<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foodItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgNoti"
        android:layout_width="80dp"
        android:layout_height="102dp"
        android:layout_marginStart="13dp"
        app:srcCompat="@drawable/beefburger"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtQ" />

    <TextView
        android:id="@+id/txtQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="TextView"
        android:layout_alignBottom="@+id/imgNoti"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/txtTitleNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtQ"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/imgNoti"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtPriceNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtTitleNoti"
        android:layout_marginEnd="44dp"
        android:text="TextView" />
</RelativeLayout>